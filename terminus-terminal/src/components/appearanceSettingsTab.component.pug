.form-line
    .header
        .title Frontend
        .description Switches terminal frontend implementation (experimental)

    select.form-control(
        [(ngModel)]='config.store.terminal.frontend',
        (ngModelChange)='config.save()',
    )
        option(value='hterm') hterm
        option(value='xterm') xterm
        option(value='xterm-webgl') xterm (WebGL)

.form-line
    .header
        .title Terminal background

    .btn-group(
        [(ngModel)]='config.store.terminal.background',
        (ngModelChange)='config.save()',
        ngbRadioGroup
    )
        label.btn.btn-secondary(ngbButtonLabel)
            input(
                type='radio',
                ngbButton,
                [value]='"theme"'
            )
            | From theme
        label.btn.btn-secondary(ngbButtonLabel)
            input(
                type='radio',
                ngbButton,
                [value]='"colorScheme"'
            )
            | From color scheme

.form-line
    .header
        .title Cursor shape

    .btn-group(
        [(ngModel)]='config.store.terminal.cursor',
        (ngModelChange)='config.save()',
        ngbRadioGroup
    )
        label.btn.btn-secondary(ngbButtonLabel)
            input(
                type='radio',
                ngbButton,
                [value]='"block"'
            )
            | ‚ñà
        label.btn.btn-secondary(ngbButtonLabel)
            input(
                type='radio',
                ngbButton,
                [value]='"beam"'
            )
            | |
        label.btn.btn-secondary(ngbButtonLabel)
            input(
                type='radio',
                ngbButton,
                [value]='"underline"'
            )
            | ‚ñÅ

.form-line
    .header
        .title Blink cursor

    toggle(
        [(ngModel)]='config.store.terminal.cursorBlink',
        (ngModelChange)='config.save()',
    )

.form-line
